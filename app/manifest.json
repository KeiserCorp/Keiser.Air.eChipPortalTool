{
  "manifest_version": 2,
  "name": "Keiser eChip Portal Tool",
  "short_name": "keiser-echip-portal-tool",
  "description": "Keiser eChip Portal Tool",
  "version": "0.1.0",
  "minimum_chrome_version": "42",

  "icons": {
    "16": "icon/icon_16.png",
    "128": "icon/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  
  "permissions": [
    "usb",
	"webview",
	"storage"
    ],
  "optional_permissions": [
    {"usbDevices": [
      {"vendorId": 1274, "productId": 9360}
      ]
    }
  ]
}